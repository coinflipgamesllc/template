# Regenerate this file if the template changes
-g .reflex.erb -- \
    rake reflex

# Regenerate the font cache if a new font is added
-g 'shared/fonts/*' -- \
    cp shared/fonts/* /usr/share/fonts/. && fc-cache -fv

# Load up the individual Rakefiles for each project
# This section is automatically generated by `rake reflex`
#   @see the .reflex.erb template
<% all_tasks.each do |t, files| %>
# <%= t %>
-r '(<%= files.join("|") %>)' -- \
    rake <%= t %>
<% end %>
